<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/nice_blue</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">128dp</item>
        <item name="android:layout_marginLeft">128dp</item>
        <item name="android:layout_marginEnd">128dp</item>
        <item name="android:layout_marginRight">128dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>

    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/purple_700</item>
    </style>

</resources>